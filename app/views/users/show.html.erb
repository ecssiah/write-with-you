<h1>Welcome, <%= current_user.username %></h1>

<button type="button" id="new-button">New Story</button>
<%= button_to "User Settings", 
  edit_user_path(current_user), method: :get, id: "settings-button" 
%>

<label>
  <%= check_box_tag 'show_all_contributions' %>
  Show All Contributions
</label>

<hr>

<div id="user-story-list-container">
</div>

<script charset="utf-8" id="story-entry-template" type="text/x-handlebars-template">
  <span class="story-list-item-container">
    <div class="story-rank-container">
      <%= image_tag "story-rank-backdrop", class: "story-rank-backdrop" %>
      <div class="story-rank">{{rank}}</div>     
    </div>
    <div class="story-title">
      <a href="/stories/{{id}}">{{title}}</a>
    </div>
  </span>
</script>

<div id="new-story-modal" class="modal">
  <div id="new-story-dialog" class="modal-content modal-light">
    <%= form_for :story, html: {id: "new-story-form"} do |f| %>
      <%= render partial: "stories/story_form", 
        locals: {f: f, submit_text: "Update Story"} 
      %>
    <% end %>
  </div>
</div>

<script charset="utf-8">
  $('#main-content').attr('class', 'content-container-light')

  build_user_created()

  jscolor.installByClassName("jscolor");
</script>
