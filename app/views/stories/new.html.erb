<script charset="utf-8">
  document.getElementById("main-content").className = "content-container-light"
</script>

<h2>Create a story...</h2>

<%= form_for @story do |f| %>
  <div class="story-container">
    <%= f.hidden_field :creator_id, value: "#{current_user.id}" %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>

    <%= f.label :snippet_length, "Snippet Length" %>
    <%= f.number_field :snippet_length, in: 16..255, class: "snippet-length" %>

    <%= f.label :color %>
    <%= f.text_field :color, class: "jscolor centered-text" %>

    <br>

    <span class="theme-checkbox">
      <%= f.check_box :dark_theme %>
      <%= f.label :dark_theme %>
    </span>

    <br>

    <%= f.submit "Create Story" %>
  </div>
<% end %>

<br>

<% if @story.errors.any? %>
  <% @story.errors.full_messages.each do |message| %>
    <p class="error-display"><%= message %></p>
  <% end %>
<% end %>

